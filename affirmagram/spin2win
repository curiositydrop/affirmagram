<script>
// --- DROP CONFIGURATION ---
const drops = [
    {name:"New Leaf Painting", url:"/drop/newleaf"},
    {name:"MBG Digital", url:"/drop/mbg"},
    {name:"Mystery Drop", url:"/drop/loading"}
];

const spinButton = document.getElementById("spinButton");
const dropNameEl = document.getElementById("dropName");
const wheel = document.getElementById("wheel");
const spinSound = document.getElementById("spinSound");

// --- LOGGING FUNCTION ---
function logSpin(dropName){
    fetch('https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec', {
        method: 'POST',
        body: JSON.stringify({drop: dropName, timestamp: new Date().toISOString()})
    }).catch(err => console.log('Logging failed', err));
}

// --- SPIN FUNCTION ---
spinButton.addEventListener("click", function(){
    spinButton.disabled = true; // Prevent double click

    // Play audio (you can add your clip later)
    if(spinSound.src) spinSound.play();

    // Random pick
    const pick = drops[Math.floor(Math.random() * drops.length)];

    // Animate wheel spin
    const spins = 5; // number of full spins
    const degrees = Math.floor(Math.random() * 360) + spins*360;
    wheel.style.transform = `rotate(${degrees}deg)`;

    // Small confetti effect placeholder (expand later)
    confetti.style.display = 'block';
    setTimeout(()=>{ confetti.style.display='none'; }, 2500);

    // Update reward name after delay
    setTimeout(()=>{
        dropNameEl.textContent = pick.name;
        // Log spin
        logSpin(pick.name);
    }, 2000);

    // Redirect to Drop page after short delay
    setTimeout(()=>{
        window.location.href = pick.url;
    }, 4000);
});
</script>

